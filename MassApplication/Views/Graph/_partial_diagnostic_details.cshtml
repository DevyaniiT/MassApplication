                    </li>
                    <li class="nav-item" style="border-right: 1px solid #448C9B">
                        <a class="nav-link" id="md-tab" data-toggle="tab" href="#"><img src="~/Images/measurement.png" style="width:30px" /> <p class="pt-1">Measurement Diagnostics</p></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="tf-tab" data-toggle="tab" href="#"><img src="~/Images/transducer.png" style="width:30px" /> <p>Transducer failure</p></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="dp-tab" data-toggle="tab" href="#"> <img src="~/Images/detection.png" style="width:30px" /> <p>Detection Problem</p></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="un-tab" data-toggle="tab" href="#"><img src="~/Images/ultrasonic.png" style="width:30px" /><p>Ultrasonic Noise</p></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="pcp-tab" data-toggle="tab" href="#"><img src="~/Images/pressure-icon.png" style="width:30px" /><p>Condition Pressure</p></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="pct-tab" data-toggle="tab" href="#"><img src="~/Images/temprature-icon.png" style="width:30px" /><p>Condition Temprature</p></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="cfp-tab" data-toggle="tab" href="#"> <img src="~/Images/change-flow-icon.png" style="width:30px" /><p>Change in the flow Profile</p> </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="fl-tab" data-toggle="tab" href="#"><img src="~/Images/fouling-icon.png" style="width:30px" /><p>Fouling</p></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="hv-tab" data-toggle="tab" href="#"><img src="~/Images/velocity.png" style="width:30px" /><p>High Velocity</p></a>
                    </li>
                </ul>
            </div>
            <div class="col-md-2 pt-2 pr-3 ">
                <div class="meter-details" style="float:right;">
                    <button type="button" class="btn bg-info btn-sm daterange" data-toggle="tooltip" title="Date range">
                        <i class="fa fa-calendar"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div id="GraphPortion">
        @{Html.RenderAction("DiagnosticViewerData", "Graph", new { menuName = "fd" });}
    </div>
</section>


<script>
    $('.daterange').daterangepicker({
        ranges: {
            'Today': [moment(), moment()],
            'Yesterday': [moment().subtract(1, 'days'), moment().subtract(1, 'days')]
            //'Last 7 Days': [moment().subtract(6, 'days'), moment()],
            //'Last 30 Days': [moment().subtract(29, 'days'), moment()],
            //'This Month': [moment().startOf('month'), moment().endOf('month')],
            //'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
        },
        startDate: moment().subtract(29, 'days'),
        endDate: moment()
    }, function (start, end) {
        /*window.alert('You chose: ' + start.format('MMMM D, YYYY') + ' - ' + end.format('MMMM D, YYYY'))*/
        @*var assetId = @Html.Raw(Model.mmst_id);*@
        var assetId = @Html.Raw(Model.asset_id);
        var streamNo = @Html.Raw(Model.stream_no);
        var start_date = start.format('YYYY-MM-DD');
        var end_date = end.format('YYYY-MM-DD');
        var active_tab = $('#myTabMeter li.nav-item a.active').attr('id');
        var split_tab = active_tab.split("-");

        //console.log("assetId:", assetId);
        //console.log("streamNo:", streamNo);
        //console.log("start_date:", start_date);
        //console.log("end_date:",end_date);
        //console.log("split_tab:", split_tab[0]);

        var data = 'id=' + assetId + '&streamNum=' + streamNo + '&start_date=' + start_date + '&end_date=' + end_date +'&tab_name=' + split_tab[0];

        $.ajax({
            type: 'GET',
            url: '@Url.Content("~/Graph/GetDynamicData")',
            data: data,
            success: function (data) {
                $("#GraphPortion").html(data);
            }
        });
    });
</script>
<script>
    $('#myTabMeter li.nav-item').click(function () {
            var valData = $(this).find('a').attr('id');
            var splits = valData.split("-");
            console.log(splits[0]);
            $.ajax({
                type: "GET",
                url: '@Url.Content("~/Graph/DiagnosticViewerData?menuName=")' + splits[0],
                success: function (data) {
                    $("#GraphPortion").html(data);
                },
               "error": function (data) {
                  alert("Some Error Occured!");
               }
            });

        });
</script>


