@model MassApplication.Models.Diagnostic_Class
@{
    ViewBag.Title = "Diagnostic View";
}

<link rel="stylesheet" href="~/GraphStyles/css/styles.css?v=1" />
<link rel="stylesheet" href="~/MasterStyles/DaterangePicker/daterangepicker.css" />
<script src="~/MasterStyles/DaterangePicker/daterangepicker.js"></script>

<style>
    .current {
        display: block;
    }

    .step {
        height: 30px;
        width: 30px;
        cursor: pointer;
        margin: 0 2px;
        color: #fff;
        background-color: #bbbbbb;
        border: none;
        border-radius: 50%;
        display: inline-block;
        opacity: 0.8;
        padding: 5px
    }

        .step.active {
            opacity: 1;
            background-color: #69c769;
        }

        .step.finish {
            background-color: #4CAF50;
        }
</style>
<style>
    .meter-details .tooltip {
        position: relative;
        display: inline-block;
        border-bottom: 1px solid #2a5b6c;
        opacity: 1;
    }

        .meter-details .tooltip .tooltiptext {
            visibility: hidden;
            width: 200px;
            background-color: #555;
            color: #fff;
            text-align: center;
            border-radius: 6px;
            padding: 5px 0;
            position: absolute;
            z-index: 1;
            bottom: -55%;
            right: 111%;
            opacity: 0;
            transition: opacity 0.3s;
        }

            .meter-details .tooltip .tooltiptext::after {
                content: " ";
                position: absolute;
                top: 50%;
                left: 100%; /* To the right of the tooltip */
                margin-top: -5px;
                border-width: 5px;
                border-style: solid;
                border-color: transparent transparent transparent black;
            }

        .meter-details .tooltip:hover .tooltiptext {
            visibility: visible;
            opacity: 1;
        }
</style>

