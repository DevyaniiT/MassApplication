<script>
    function BtnConnection_edit(title, conn_id, qry_id) {
        $.ajax({
         url: '@Url.Content("~/DashBoard/EditConnectionValue?conn_id=")' + conn_id + '&query_id=' + qry_id,  // The method name + parameter
            success: function (data) {
             $('#EditQueryConnectionModal .modal-body').html(data);
             $('#EditQueryConnectionModal .modal-title').html(title);
             $('#EditQueryConnectionModal').modal('show');// This should be an empty div where you can inject your new html (the partial view)
        }
    });
}
</script>
