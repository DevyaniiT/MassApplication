@using (Html.BeginForm("EditQueryData", "Report", FormMethod.Post, new { target = "_blank" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <ul class="nav nav-tabs border-bottom-0" id="tabContent">
            <li class="nav-item "><a href="#editconnectionTab" class="nav-link active" data-toggle="tab">Connection Details</a></li>
            <li class="nav-item"><a href="#editqueryTab" class="nav-link" data-toggle="tab">Parameters Details</a></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane mt-4" id="editqueryTab">
                <div class="master">
                    @Html.HiddenFor(model => model.queryId, new { id = "edit_query_id" })
                    <table id="EditQueryTable" class="table table-bordered table-responsive-md table-striped">
                        <thead>
                            <tr>
                                <th width="25%">Name</th>
                                <th width="15%">Type</th>
                                <th width="15%">User Type</th>
                                <th class="text-center">Query</th>
                                @*<th class="text-center">
                                        <button type="button" class="addNewQuery btn btn-default"><i class="fa fa-plus"></i></button>
                                    </th>*@
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                @*<td class="Edit_qry_id col-md-2" style="display:none;">
                                        @Model.queryId
                                    </td>*@
                                <td class="Edit_Query_qryname" contenteditable="true">
                                    @Model.query_name
                                </td>
                                <td class="qry_type">
                                    @Html.DropDownList("edit_queryType", new SelectList(ViewBag.EditQueryType, "Value", "Value", Model.query_type), new { @class = "edit_queryType form-control" })
                                </td>
                                <td class="qry_usertype">
                                    @Html.DropDownList("edit_queryUserType", new SelectList(ViewBag.EditUserRoleType, "Value", "Text", Model.query_user_id), new { @class = "edit_queryUserType form-control" })
                                </td>
                                <td class="script">
                                    <textarea class="Edit_Query_query">@Model.query_qrydata</textarea>
                                </td>
                                @*<td style="text-align:center">
                                        <a class="deleteQuerydata" title="Delete" data-toggle="tooltip"><i class="fa fa-trash"></i></a>
                                    </td>*@
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="tab-pane active mt-4" id="editconnectionTab">
                <div class="row">
                    <div class="col-sm-8">
                        @*<h3 class="">Connection List</h3>*@
                    </div>
                    <div class="col-sm-4" style="text-align:right">
                        <button type="button" class="btn btn-dash mb-3" data-toggle="modal" data-target="#addEditQryConnModal"><i class="fa fa-plus"></i> Add New</button>
                    </div>
                </div>

                <table id="editQryConnectionTable" class="table table-bordered" cellspacing="0" rules="all" border="1" style="border-collapse: collapse;">
                    <thead>
                        <tr>
                            <th style="text-align:center">Select</th>
                            <th>Connection Name</th>
                            <th>DSN</th>
                            <th>User Id</th>
                            <th>Database Name</th>
                            <th style="text-align:center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in ViewBag.ConnectionValues)
                        {
                            @Html.HiddenFor(modelItem => Model.con_id, new { id = "edit_qry_conn_id" })
                            <tr>
                                <td style="text-align:center;">

                                    @{
                                        var con_id = m.connection_id;
                                        if (con_id == Model.con_id)
                                        {
                                            <input class="select_Connnection" type="radio" data-id="@m.connection_id" name="select_Connnection" checked="checked">
                                        }
                                        else
                                        {
                                            <input class="select_Connnection" type="radio" data-id="@m.connection_id" name="select_Connnection">
                                        }
                                    }
                                </td>
                                <td class="conn_name">@m.connection_name</td>
                                <td class="dsn_name">@m.dsn_name</td>
                                <td class="user_id">@m.user_id</td>
                                <td class="db_name">@m.db_schema_name</td>
                                <td class="conn_event" style="text-align:center;">

                                    <a onclick="BtnConnection_edit('Edit Connection Data',@m.connection_id,@Model.queryId)" class="dropdown_icon" data-toggle="modal" data-target="#EditConnectionModal" title="Edit">
                                        <i class="fas fa-edit" style="margin-left: 10px;  color: #dc5252;"></i>
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

        <div style="padding:10px 0; text-align:right">
            <input id="submitEditQueryDetail" type="button" value="Save" class="btn btn-dash" style="padding:10px 20px" />
            <input type="button" value="Close" class="btn btn-default" data-dismiss="modal" style="padding: 10px 20px; background-color: #e1e1e1; color: #000;" />
        </div>

        <!-- popup modal for edit connection -->
        <div class="modal" tabindex="-1" role="dialog" aria-hidden="true" id="EditQueryConnectionModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title"></h3>
                        @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>*@
                    </div>
                    <div class="modal-body">
                        <p>Loading...</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- popup modal for adding new connection -->
        <div class="modal" tabindex="-1" role="dialog" aria-hidden="true" id="addEditQryConnModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>Add New Connection</h3>
                    </div>
                    <div class="modal-body">

                        <div class="row">
                            <div class="col-sm-3">
                                <label ID="Lbl_Editdsn"> DSN: </label>
                            </div>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="edt_dsn_name" name="edt_dsn_name" placeholder="Enter dsn">
                                <span class="error">DSN required</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <label ID="Lbl_Editusername"> User Name: </label>
                            </div>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="edt_user_name" name="edt_user_name" placeholder="Enter user name">
                                <span class="error">User name required</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <label ID="Lbl_Editpwd"> Password: </label>
                            </div>
                            <div class="col-sm-9">
                                <input type="password" class="form-control" id="edt_password" name="edt_password" placeholder="Enter password">
                                <span class="error">Password required</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <label ID="Lbl_Editdb_name"> Database Name: </label>
                            </div>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="edt_db_name" name="edt_db_name" placeholder="Enter database name">
                                <span class="error">Database name required</span>
                            </div>
                        </div>

                        <div style="padding:10px 0; text-align:right">
                            <input type="button" class="BtnTestConnEdit btn btn-success" value="Test" />
                            <input type="button" class="BtnSaveConnEdit btn btn-dash" value="Save" />
                            <input type="button" class="BtnCloseConnEdit btn btn-danger" value="Close" />
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>

}

