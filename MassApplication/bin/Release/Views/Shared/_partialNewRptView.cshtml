@model MassApplication.Models.Report_Class

<style>
 /*   .table tr td input {
        display: block;
    }*/

    span.error {
        display: block;
        visibility: hidden;
        color: red;
        font-size: 90%;
    }

    tr.error {
        background-color: rgba(255,0,0,0.35);
    }

     textarea {
        resize: none;
    }
    #tabContentRpt .nav-link {
        color: #000;
        background-color: #e1e1e1;
        border: 0;
        margin: 0 4px;
        padding: 13px 23px;
        font-size: 13px;
        border-radius: 5px;
        text-transform: uppercase;
        font-weight: 600;
    }
        #tabContentRpt .nav-link.active, .nav-tabs .nav-item.show .nav-link {
            color: #ffffff;
            background-color: #2a5b6c;
            border: 0;
            padding: 13px 23px;
            margin: 0 4px;
            border-radius: 5px;
            text-transform: uppercase;
            font-size: 13px;
            font-weight: 600;
        }
</style>

<div class="form-horizontal">
    <ul class="newnavconn nav nav-tabs border-bottom-0" id="tabContentRpt">
        <li class="nav-item "><a href="#newConnectionTab" class="nav-link active" data-toggle="tab">Connection Details</a></li>
        <li class="nav-item"><a href="#newReportTab" class="nav-link" data-toggle="tab">Report Details</a></li>
        <li class="nav-item"><a href="#newParamsTab" class="nav-link" data-toggle="tab">Parameters Details</a></li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane mt-4" id="newReportTab">
            <div class="master">

                <div class="row">
                    <div class="col-sm-4">
                        <label ID="Lbl_name"> Enter report name: </label>
                    </div>
                    <div class="col-sm-8">
                        <input id="report_name" class="form-control drop_down_daily" type="text" />
                        <span class="error">Report name required</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <label ID="Lbl_description"> Enter report description: </label>
                    </div>
                    <div class="col-sm-8">
                        <textarea id="report_description" class="form-control"></textarea>
                        <span class="error">Report description required</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <label ID="Lbl_name"> User Type: </label>
                    </div>
                    <div class="col-sm-8">
                        @Html.DropDownList("report_user_type", new SelectList(ViewBag.UserRoleType, "Value", "Text"), new { @class = "form-control mb-3" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <label ID="Lbl_path"> Enter report file: </label>
                    </div>
                    <div class="col-md-6">
                        <input id="report_file" type="file" accept=".rpt" />
                        <span class="error">Report file required</span>

                    </div>
                    <div class="col-md-2">
                        <input type="button" id="uploadFile" value="Upload" style="width:80px" class="btn btn-success" />
                    </div>

                </div>
                <br />
                <table id="querytabledata" class="table table-responsive table-bordered">
                    <tr>
                        <th width="25%"> Type</th>
                        <th width="25%">Parameter Name</th>
                        <th width="50%">Query</th>
                        <th width="15%"> <i id="qryAdd" type="button" class="fa fa-plus" style="margin-top:10px"></i></th>
                    </tr>
                    <tr class="mycontainer" id="query_mainrow">
                        <td>
                            <select id="qryType" class="querytype form-control">
                                <option value="0">Select</option>
                                <option value="function">Function</option>
                                <option value="procedure">Pocedure</option>
                                <option value="query">Query</option>
                            </select>
                            @*<span class="error">Select query type</span>*@
                        </td>
                        <td>
                            <input type="text" id="qryParameter" class="qryParameter form-control" name="qryParameter" />
                            @*<span class="error">Valid parameter required</span>*@
                        </td>
                        <td colspan="2">
                            <textarea id="qryQuery" class="qryQuery" name="qryQuery" style="width:100%"></textarea>
                            @*<input type="text" id="qryQuery" class="qryQuery form-control" name="qryQuery" />*@
                            @*<span class="error">Valid query required</span>*@
                        </td>

                    </tr>
                </table>
                <div id="queryItems">
                    <table class="table table-responsive table-bordered" id="querydetailsItems">
                        <tr style="visibility: collapse;">

                            <th width="25%"></th>
                            <th width="25%"></th>
                            <th width="50%"></th>
                            <th width="15%"> </th>

                    </table>
                    <span id="queryItemError" style="color:red"></span>
                </div>
            </div>
        </div>
        <div class="tab-pane mt-4" id="newParamsTab">
            <div class="details">
                <table class="table table-responsive table-bordered">
                    <tr>
                        <th width="20%">Label</th>
                        <th width="20%">Variable</th>
                        <th width="20%">Type</th>
                        <th width="20%">Method</th>
                        <th width="20%">Query</th>
                        <th width="5%"> <i id="add" type="button" class="fa fa-plus" style="margin-top:10px"></i> </th>
                       
                    </tr>
                    <tr class="mycontainer" id="mainrow">
                        <td>
                            <input type="text" id="labelName" class="labelName form-control" name="param_label" />
                            @*<span class="error">Valid label name required</span>*@
                        </td>
                        <td>
                            <input type="text" id="varValue" class="varValue form-control" name="param_variable" />
                            @*<input type="text" id="varValue" class="varValue form-control" name="param_variable" list="param_variable" />
                            <datalist id="param_variable">
                                <option value="varDuration">
                                <option value="varUnitFactor">
                                <option value="varPipelinemst_id">
                                <option value="varendCalDate">
                                <option value="varstartCalDate">
                            </datalist>*@
                            @*<span class="error">Valid variable required</span>*@
                        </td>
                        <td>
                            <select id="parameterType" class="type form-control" name="param_type">
                                <option value="0">Select</option>
                                <option value="Dropdown">Dropdown</option>
                                <option value="Dropdown-multi">Dropdown-multi</option>
                                <option value="Datetime">Datetime</option>
                            </select>
                            @*<span class="error">Select type</span>*@
                        </td>
                        <td>
                            <select id="parameterMethod" class="method form-control" name="param_method">
                                <option value="0">Select</option>
                                <option value="Static">Static</option>
                                <option value="Dynamic">Dynamic</option>
                            </select>
                            @*<span class="error">Select method</span>*@
                        </td>
                        <td colspan="2">
                            @*<input type="text" id="query" class="query form-control" name="param_query" />*@
                            <textarea id="query" class="query"  name="param_query" style="width: 100%;"></textarea>
                            @*<span class="error">Valid query required</span>*@
                        </td>
                        
                    </tr>
                </table>
                <div id="orderItems">
                    <table class="table table-responsive table-bordered" id="orderdetailsItems" style="">
                        <tr style="visibility: collapse;">
                        <th width="20%"></th>
                        <th width="20%"></th>
                        <th width="20%"></th>
                        <th width="20%"></th>
                        <th width="20%"></th>
                        <th width="5%"> </th>
                         <tr>
                    </table>
                    <span id="orderItemError" style="color:red"></span>
                </div>
            </div>
        </div>
        <div class="tab-pane mt-4 active" id="newConnectionTab">
            <div class="row">
                <div class="col-sm-8">
                    @*<h3 class="card-title">Connection List</h3>*@
                </div>
                <div class="col-sm-4" style="text-align:right">
                    <button type="button" class="btn btn-dash mb-3" data-toggle="modal" data-target="#addConn_modal"><i class="fa fa-plus"></i> Add New</button>
                </div>
            </div>
            <table id="connTable" class="table table-bordered" cellspacing="0" rules="all" border="1" style="border-collapse: collapse;">
                <thead>
                    <tr>
                        <th style="text-align:center">Select</th>
                        <th>Connection Name</th>
                        <th>DSN</th>
                        <th>User Id</th>
                        <th>Database Name</th>
                        <th style="text-align:center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in ViewBag.ConnectionItems)
                    {
                        <tr>
                            <td style="text-align:center;">
                                <input class="select_mode" type="radio" data-id="@m.connection_id" name="select_mode">
                                @*<span class="error">Please select the row</span>*@
                            </td>
                            <td class="conn_name">@m.connection_name</td>
                            <td class="dsn_name">@m.dsn_name</td>
                            <td class="user_id">@m.user_id</td>
                            <td class="db_name">@m.db_schema_name</td>
                            <td class="conn_event" style="text-align:center;">

                                <a onclick="BtnEditConn('Edit Connection Data',@m.connection_id)" class="dropdown_icon" data-toggle="modal" data-target="#editConn_modal" title="Edit">
                                    <i class="fas fa-edit" style="margin-left: 10px;  color: #dc5252;"></i>
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div id="connItems">
                <span id="connItemError" style="color:red"></span>
            </div>
        </div>
    </div>

    <div id="SumError">
        <span id="summaryError" style="color:red"></span>
    </div>

    <div style="padding:10px 0; text-align:right">
        <input id="submitDetail" type="button" value="Create" class="btn btn-dash" style="padding:10px 20px" />
        <input type="button" value="Close" class="btn btn-default" data-dismiss="modal" style="padding: 10px 20px; background-color: #e1e1e1; color: #000;" />
    </div>


    <!-- popup modal for adding new connection -->
    <div class="modal" tabindex="-1" role="dialog" aria-hidden="true" id="addConn_modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Add New Connection</h3>
                    @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>*@
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <label ID="Lbl_dsn"> DSN: </label>
                        </div>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="dsn_name" name="dsn_name" placeholder="Enter dsn">
                            <span class="error">DSN required</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            <label ID="Lbl_username"> User Name: </label>
                        </div>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="user_name" name="user_name" placeholder="Enter user name">
                            <span class="error">User name required</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            <label ID="Lbl_pwd"> Password: </label>
                        </div>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
                            <span class="error">Password required</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            <label ID="Lbl_db_name"> Database Name: </label>
                        </div>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="db_name" name="db_name" placeholder="Enter database name">
                            <span class="error">Database name required</span>
                        </div>
                    </div>

                    <div style="padding:10px 0; text-align:right">
                        <input type="button" class="BtnTestConn btn btn-success" value="Test" />
                        <input type="button" class="BtnSaveConn btn btn-dash" value="Save" onclick="BtnSaveConn()" />
                        <input type="button" class="BtnCloseConn btn btn-danger" value="Close"/>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- popup modal for edit report -->
    <div class="modal" tabindex="-1" role="dialog" aria-hidden="true" id="editConn_modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title"></h3>
                    @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>*@
                </div>
                <div class="modal-body">
                    <p>Loading...</p>
                </div>
            </div>
        </div>
    </div>


</div>

