    function BtnEditConn(title,conn_id) {
        $.ajax({
         url: '@Url.Content("~/Report/EditConnData?conn_id=")' + conn_id, // The method name + parameter
            success: function (data) {
             $('#editConn_modal .modal-body').html(data);
             $('#editConn_modal .modal-title').html(title);
             $('#editConn_modal').modal('show');// This should be an empty div where you can inject your new html (the partial view)
        }
    });
}
</script>
<script>
     $('.BtnTestConn').click(function () {
      var isAllValid = true;
        if ($('#dsn_name').val().trim() == '') {
            isAllValid = false;
            $('#dsn_name').siblings('span.error').css('visibility', 'visible');
        }
        else {
            $('#dsn_name').siblings('span.error').css('visibility', 'hidden');
        }

        if ($('#user_name').val().trim() == '') {
            isAllValid = false;
            $('#user_name').siblings('span.error').css('visibility', 'visible');
        }
        else {
            $('#user_name').siblings('span.error').css('visibility', 'hidden');
        }

        if ($('#password').val().trim() == '') {
            isAllValid = false;
            $('#password').siblings('span.error').css('visibility', 'visible');
        }
        else {
            $('#password').siblings('span.error').css('visibility', 'hidden');
        }

        if ($('#db_name').val().trim() == '') {
            isAllValid = false;
            $('#db_name').siblings('span.error').css('visibility', 'visible');
        }
        else {
            $('#db_name').siblings('span.error').css('visibility', 'hidden');
        }

        if (isAllValid) {
            var newDataTest = {
                dsn_name: $("#dsn_name").val().trim(),
                user_id: $('#user_name').val().trim(),
                password: $('#password').val().trim(),
                db_schema_name: $('#db_name').val().trim()
            }
            //alert(newDataTest);

          $.ajax({
            type: 'POST',
            url: '@Url.Content("~/Report/ConnectionTest")',
            data: JSON.stringify(newDataTest),
            contentType: 'application/json',
            success: function (data) {
                    alert(data);
            }
        });
     }
    });
     $('.BtnSaveConn').click(function () {
     var isAllValid = true;
        if ($('#dsn_name').val().trim() == '') {
            isAllValid = false;
            $('#dsn_name').siblings('span.error').css('visibility', 'visible');
        }
        else {
            $('#dsn_name').siblings('span.error').css('visibility', 'hidden');
        }

        if ($('#user_name').val().trim() == '') {
            isAllValid = false;
            $('#user_name').siblings('span.error').css('visibility', 'visible');
        }
        else {
            $('#user_name').siblings('span.error').css('visibility', 'hidden');
        }

        if ($('#password').val().trim() == '') {
            isAllValid = false;
            $('#password').siblings('span.error').css('visibility', 'visible');
        }
        else {
            $('#password').siblings('span.error').css('visibility', 'hidden');
        }

        if ($('#db_name').val().trim() == '') {
            isAllValid = false;
            $('#db_name').siblings('span.error').css('visibility', 'visible');
        }
        else {
            $('#db_name').siblings('span.error').css('visibility', 'hidden');
        }

        if (isAllValid) {
            var newData = {
                dsn_name: $("#dsn_name").val().trim(),
                user_id: $('#user_name').val().trim(),
                password: $('#password').val().trim(),
                db_schema_name: $('#db_name').val().trim()
            }
            //alert(newData);

          $.ajax({
            type: 'POST',
            url: '@Url.Content("~/Report/ConnectionSave")',
            data: JSON.stringify(newData),
            contentType: 'application/json',
            success: function (data) {
                  if (data.startsWith("ERROR")) {
                      var res = data.split(";");
                      var error = '';
                      if (res.length > 1) {
                          error = res[1];
                      } else {
                          error = data;
                      }
                      alert(error);
                  } else {
                      alert('Data inserted successfully!!!');
                      $('#addConn_modal').modal('hide');
                      $('#add_modal .modal-body').html(null);
                      $('#add_modal .modal-body').html(data);

                      $(".nav li:eq(0)").removeClass('active');
                      $(".nav li:eq(2)").addClass('active');
                      $("#newReportTab").removeClass('active');
                      $("#newConnectionTab").addClass('active');
                  }
                  //else {
                      // alert('Please check connection entries!!!');
                       //var msgData = '@TempData["msg"]';
                       //alert(msgData);
                  //}
            },
            error: function (error) {
                alert('Error');
            }
        });
     }
    });
</script>
