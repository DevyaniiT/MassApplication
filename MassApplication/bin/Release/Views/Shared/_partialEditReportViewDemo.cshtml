@using (Html.BeginForm("EditRptData", "Report", FormMethod.Post, new { target = "_blank" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <ul class="nav nav-tabs border-bottom-0" id="tabContent">
            <li class="nav-item "><a href="#connectionTab" class="nav-link active" data-toggle="tab">Connection Details</a></li>
            <li class="nav-item"><a href="#reportTab" class="nav-link" data-toggle="tab">Report Details</a></li>
            <li class="nav-item"><a href="#paramsTab" class="nav-link" data-toggle="tab">Parameters Details</a></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane mt-4" id="reportTab">
                <div class="master">
                    @Html.HiddenFor(model => model.report_id, new { id = "edit_rpt_id" })
                    <div class="row">
                        <div class="col-sm-4">
                            <label ID="Lbl_name"> Report Name: </label>
                        </div>
                        <div class="col-sm-8">
                            <input id="edit_report_name" class="form-control mb-3 drop_down_daily" type="text" value="@Model.report_name" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <label ID="Lbl_description"> Report Description: </label>
                        </div>
                        <div class="col-sm-8">
                            <textarea id="edit_report_description" class="form-control" rows="2">@Model.report_description</textarea>
                            @*@Html.TextAreaFor(model => model.report_description, new { @class = "form-control drop_down_daily" })*@
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-4">
                            <label ID="Lbl_name"> User Type: </label>
                        </div>
                        <div class="col-sm-8">
                            @Html.DropDownList("edit_reportUserType", new SelectList(ViewBag.EditUserRoleType, "Value", "Text", Model.report_user_id), new { @class = "form-control mb-3" })
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label ID="Lbl_path"> Report File: </label>
                        </div>
                        <div class="col-md-6 d-flex">
                            @{
                                String filepathname = Server.MapPath(Model.report_path) + Model.report_file;
                            }
                            <input id="edit_report_file" class="form-control drop_down_daily w-50" type="text" value="@Model.report_file" readonly="readonly" />
                            <input id="report_file_data" class=" ml-2 border" type="file" accept=".rpt" />
                            @*<input type="file" accept=".rpt/*">*@
                            @*@Html.TextBoxFor(model => model.report_file, new { @class = "form-control drop_down_daily" })*@
                        </div>
                        <div class="col-md-2">
                            <input type="button" id="uploadFileEditmode" value="Upload" style="width:80px" class="btn btn-success mb-2" />
                        </div>
                    </div>
                    <br />

                    <table id="editquerytabledata" class="table table-bordered table-responsive-md table-striped">
                        <thead>
                            <tr>
                                @*<th>ID</th>*@
                                <th>Type</th>
                                <th>Parameter Name</th>
                                <th class="text-center">Query</th>
                                <th class="text-center">
                                    @*<button type="button" class="btn btn-default add-new-query" onclick="BtnAddQueryData(@Model.report_id)"><i class="fa fa-plus"></i></button>*@
                                    <button type="button" class="add_new_query btn btn-default"><i class="fa fa-plus"></i></button>
                                </th>
                            </tr>
                        </thead>
                        @if (Model.query_data != null)
                        {
                            <tbody>
                                @foreach (var qryitem in Model.query_data)
                                {
                                    <tr col="2">
                                        <td class="qry_id col-md-2" style="display:none;">
                                            @qryitem.queryId
                                        </td>
                                        <td class="qry_type col-md-3">
                                            <select class="edit_qry_type_select form-control">
                                                <option value="@qryitem.type">@qryitem.type</option>
                                                @*<option value="0">Select</option>*@
                                                <option value="function">Function</option>
                                                <option value="procedure">Pocedure</option>
                                                <option value="query">Query</option>
                                            </select>
                                        </td>
                                        <td class="edit_qry_parameter col-md-3" contenteditable="true">
                                            @qryitem.parameterData
                                        </td>
                                        <td class="script col-md-7">
                                            <textarea class="edit_report_query">@qryitem.query_qrydata</textarea>
                                        </td>
                                        <td style="text-align:center">

                                            @*<button id="bEdit" type="button" class="btn btn-sm btn-default" title="Edit" data-toggle="tooltip" onclick="rowEdit(this);"><span class="glyphicon glyphicon-pencil"></span></button>
                                <button id="bDelete" type="button" class="btn btn-sm btn-default" title="Delete" data-toggle="tooltip"onclick="rowDelete(this);" style="margin-top: 5px;"><span class="glyphicon glyphicon-trash"> </span></button>*@

                                            @*<a class="editQuerydata" title="Edit" data-toggle="tooltip"><i class="fa fa-pencil-square-o" style="margin-right:5px"></i></a>*@
                                            <a class="deleteQuerydata" title="Delete" data-toggle="tooltip"><i class="fa fa-trash"></i></a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        }
                    </table>
                </div>
            </div>
            <div class="tab-pane mt-4" id="paramsTab">
                <div class="details">
                    <table id="editreportItems" class="table table-bordered table-responsive-md table-striped text-center">
                        <thead>
                            <tr>
                                @*<th class="text-center">ID</th>*@
                                <th class="text-center">Label</th>
                                <th class="text-center">Variable</th>
                                <th class="text-center">Type</th>
                                <th class="text-center">Method</th>
                                <th class="text-center">Query</th>
                                <th class="text-center">
                                    @*<button type="button" class="btn btn-default add-new-query" onclick="BtnAddQueryData(@Model.report_id)"><i class="fa fa-plus"></i></button>*@
                                    <button type="button" class="add_param_query btn btn-default"><i class="fa fa-plus"></i></button>
                                </th>
                            </tr>
                        </thead>
                        @if (Model.query_data != null)
                        {
                            <tbody>
                                @foreach (var items in Model.param_data)
                                {
                                    <tr>
                                        <td class="param_id pt-3-half" contenteditable="false">
                                            @items.param_id
                                        </td>
                                        <td class="edit_labelTxt pt-3-half" contenteditable="true">
                                            @items.param_label
                                        </td>
                                        <td class="edit_variable pt-3-half" contenteditable="true">
                                            @items.param_variable
                                        </td>
                                        <td class="type pt-3-half">
                                            <select class="edit_paramQry_type_select form-control">
                                                <option value="@items.param_type">@items.param_type</option>
                                                @*<option value="0">Select</option>*@
                                                <option value="Dropdown">Dropdown</option>
                                                <option value="Dropdown-multi">Dropdown-multi</option>
                                                <option value="Datetime">Datetime</option>
                                            </select>
                                        </td>
                                        <td class="method pt-3-half">
                                            <select class="edit_paramQry_method_select form-control">
                                                <option value="@items.param_method">@items.param_method</option>
                                                @*<option value="0">Select</option>*@
                                                <option value="Static">Static</option>
                                                <option value="Dynamic">Dynamic</option>
                                            </select>
                                        </td>
                                        <td class="query pt-3-half" contenteditable="true">
                                            <textarea class="edit_param_query"> @items.param_query</textarea>
                                        </td>
                                        <td style="text-align:center">

                                            @*<a class="editQuerydata" title="Edit" data-toggle="tooltip"><i class="fa fa-pencil-square-o" style="margin-right:5px"></i></a>*@
                                            <a class="deleteParamQuerydata" title="Delete" data-toggle="tooltip"><i class="fa fa-trash"></i></a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        }
                    </table>
                </div>
            </div>

            <div class="tab-pane active mt-4" id="connectionTab">
                <div class="row">
                    <div class="col-sm-8">
                        @*<h3 class="">Connection List</h3>*@
                    </div>
                    <div class="col-sm-4" style="text-align:right">
                        <button type="button" class="btn btn-dash mb-3" data-toggle="modal" data-target="#addConnEditmodal" onclick="BtnAddConnection_edit()"><i class="fa fa-plus"></i> Add New</button>
                    </div>
                </div>

                <table id="editconnectionTable" class="table table-bordered" cellspacing="0" rules="all" border="1" style="border-collapse: collapse;">
                    <thead>
                        <tr>
                            <th style="text-align:center">Select</th>
                            <th>Connection Name</th>
                            <th>DSN</th>
                            <th>User Id</th>
                            <th>Database Name</th>
                            <th style="text-align:center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in ViewBag.ConnectionValues)
                        {
                            @Html.HiddenFor(modelItem => Model.connData.connection_id, new { id = "connection_id" })
                            <tr>
                                <td style="text-align:center;">

                                    @{
                                        var con_id = m.connection_id;
                                        if (con_id == Model.connData.connection_id)
                                        {
                                            <input class="select_Connnection" type="radio" data-id="@m.connection_id" name="select_Connnection" checked="checked">
                                        }
                                        else
                                        {
                                            <input class="select_Connnection" type="radio" data-id="@m.connection_id" name="select_Connnection">
                                        }
                                    }

                                    @*<input class="select_Connnection" type="radio" data-id="@m.connection_id" name="select_Connnection">*@
                                    @*<span class="error">Please select the row</span>*@
                                </td>
                                <td class="conn_name">@m.connection_name</td>
                                <td class="dsn_name">@m.dsn_name</td>
                                <td class="user_id">@m.user_id</td>
                                <td class="db_name">@m.db_schema_name</td>
                                <td class="conn_event" style="text-align:center;">

                                    <a onclick="BtnConnection_edit('Edit Connection Data',@m.connection_id,@Model.report_id)" class="dropdown_icon" data-toggle="modal" data-target="#EditConnectionModal" title="Edit">
                                        <i class="fas fa-edit" style="margin-left: 10px;  color: #dc5252;"></i>
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>


        @*<div id="SumEditError">
                    <span id="summaryEditError" style="color:red"></span>
            </div>*@

        <div style="padding:10px 0; text-align:right">
            <input id="submitEditDetail" type="button" value="Save" class="btn btn-dash" style="padding:10px 20px" />
            <input type="button" value="Close" class="btn btn-default" data-dismiss="modal" style="padding: 10px 20px; background-color: #e1e1e1; color: #000;" />

        </div>

        <!-- popup modal for edit report -->
        <div class="modal" tabindex="-1" role="dialog" aria-hidden="true" id="EditConnectionModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title"></h3>
                        @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>*@
                    </div>
                    <div class="modal-body">
                        <p>Loading...</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- popup modal for adding new connection -->
        <div class="modal" tabindex="-1" role="dialog" aria-hidden="true" id="addConnEditmodal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>Add New Connection</h3>
                    </div>
                    <div class="modal-body">

                        <div class="row">
                            <div class="col-sm-3">
                                <label ID="Lbl_Editdsn"> DSN: </label>
                            </div>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="edt_dsn_name" name="edt_dsn_name" placeholder="Enter dsn">
                                <span class="error">DSN required</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <label ID="Lbl_Editusername"> User Name: </label>
                            </div>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="edt_user_name" name="edt_user_name" placeholder="Enter user name">
                                <span class="error">User name required</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <label ID="Lbl_Editpwd"> Password: </label>
                            </div>
                            <div class="col-sm-9">
                                <input type="password" class="form-control" id="edt_password" name="edt_password" placeholder="Enter password">
                                <span class="error">Password required</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <label ID="Lbl_Editdb_name"> Database Name: </label>
                            </div>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="edt_db_name" name="edt_db_name" placeholder="Enter database name">
                                <span class="error">Database name required</span>
                            </div>
                        </div>

                        <div style="padding:10px 0; text-align:right">
                            <input type="button" class="BtnTestConnEdit btn btn-success" value="Test" />
                            <input type="button" class="BtnSaveConnEdit btn btn-dash" value="Save" />
                            <input type="button" class="BtnCloseConnEdit btn btn-danger" value="Close" />
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
}

