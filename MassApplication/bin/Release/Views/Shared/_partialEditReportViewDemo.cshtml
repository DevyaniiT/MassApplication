<script>
    function BtnAddConnection_edit() {
        $('#addConnEditmodal').dialog('open');
        //$('#addConnEditmodal .modal-body').html(data);
        //$('#addConnEditmodal').modal('show');
    }
    function BtnConnection_edit(title,conn_id,rpt_id) {
        $.ajax({
         url: '@Url.Content("~/Report/EditConnectionValue?conn_id=")' + conn_id + '&report_id=' + rpt_id,  // The method name + parameter
            success: function (data) {
             $('#EditConnectionModal .modal-body').html(data);
             $('#EditConnectionModal .modal-title').html(title);
             $('#EditConnectionModal').modal('show');// This should be an empty div where you can inject your new html (the partial view)
        }
    });
}
</script>
